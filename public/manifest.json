{
  "manifest_version": 3,
  "name": "My Chrome Extension",
  "version": "1.0.0",
  "description": "A basic Chrome extension starter using Vite and TypeScript.",
  "action": {
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs", "activeTab", "windows"],
  "icons": {
    "32": "icon.png"
  }
}
